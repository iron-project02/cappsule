<div>
  <video id="player" controls autoplay></video>
  <button id="capture">Capturar</button>
  <canvas id="snapshot" width=320 height=240></canvas>
</div>

<script>
  var player = document.getElementById('player'); 
  var snapshotCanvas = document.getElementById('snapshot');
  var captureButton = document.getElementById('capture');
  var videoTracks;

  var handleSuccess = function(stream) {
    // Attach the video stream to the video element and autoplay.
    player.srcObject = stream;
    videoTracks = stream.getVideoTracks();
  };

  captureButton.addEventListener('click', function() {
    var context = snapshot.getContext('2d');
    context.drawImage(player, 0, 0, snapshotCanvas.width, snapshotCanvas.height);

    var pngUrl = snapshotCanvas.toDataURL();
    var dataString = pngUrl.slice(22,pngUrl.length)
    //console.log('PNG URL DATA =====> ',dataString)
    
    $.ajax({
      type: 'POST',
      url: 'http://localhost:5000/search/image',
      data: {imageString: dataString},
      dataType: 'json',
      success: function (data) {
        //alert('Ok');
        //console.log('Srcceded ======>');
      }
    })
    
    // Stop all video streams.
    //document.getElementById('player').setAttribute('display', 'none');
    videoTracks.forEach(function(track) {track.stop()});
  });

  navigator.mediaDevices.getUserMedia({video: true})
      .then(handleSuccess);
</script>