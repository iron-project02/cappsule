<h1 class="uk-text-center">Reminders</h1>
<div class="reminder-add-wrapper">
	<div class="">
		<form action="/user/{{user._id}}/reminders/add" method="post" class="uk-text-center">
			<button class="uk-button uk-button-default uk-align-center" type="button">Add</button>
			<div uk-drop="mode: click; pos: bottom-center">
				<div class="uk-card uk-card-body uk-card-default">
					<div class="uk-margin">
						<div class="uk-form-controls">
							<select class="uk-select" id="form-stacked-select" name="inventoryId">
								<option value="">Please select medicine...</option>
								{{#if cabinet}}
									{{#each cabinet as |kit|}}
										{{#each kit as |product|}}
											<option value="{{product._id}}">{{product.productId.name}} - {{@../key}}</option>
										{{/each}}
									{{/each}}
								{{else}}
									<h3>Nothing to show here yet</h3>
								{{/if}}
							</select>
						</div>
					</div>
					<div class="uk-margin">
						<div class="uk-form-controls">
							<input class="uk-input" type="number" placeholder="Quantity" name="quantity">
						</div>
					</div>
					<div class="uk-margin">
						<div class="uk-form-controls">
							<input class="uk-input" type="datetime-local" placeholder="Select Date/Hour" name="date">
						</div>
					</div>
					<p class="uk-margin">
						<button type="submit" class="uk-button uk-button-default">Create Reminder</button>
					</p>
				</div>
			</div>
		</form>
	</div>
</div>

<div class="reminders-wrapper">
	<ul>
		{{#each reminders as |reminder|}}
			<div class="uk-margin">
				<div class="uk-card uk-card-default uk-card-hover uk-card-body">
					<div class="uk-card-badge"><a href="/user/{{../user._id}}/reminders/{{reminder._id}}">Delete</a></div>
					<h3 class="uk-card-title">{{reminder.inventoryId.productId.name}}</h3>
					<li>Take {{reminder.quantity}} {{reminder.inventoryId.productId.unity}}</li>
					<li>{{reminder.date}}</li>
				</div>
			</div>
		{{/each}}
	</ul>
</div>