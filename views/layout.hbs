  <!--OG meta-->
  <meta property="og:url" content="https://cappsule-app.herokuapp.com/">
  <meta property="og:type" content="web_application">
  <meta property="og:title" content="{{data.title}}">
  <meta property="og:image" content="https://cappsule-app.herokuapp.com/img/logo-small.png">
  <meta property="og:description" content="Best price medicament metasearch engine, and medicine kit manager. Health Social Media, to manage family members, friends, colleagues, and more.">
