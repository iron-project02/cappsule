  <meta name="twitter:card" content="summary"><!--Twitter meta-->
  <meta name="pinterest" content="nopin"><!--Pinterest meta-->
  <title>{{data.title}}{{appTitle}}</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/uikit/3.0.0-rc.20/css/uikit.min.css">
  <link rel="stylesheet" href="/css/styles.css">
  {{#if data.css}}
    <link rel="stylesheet" href="/css/{{data.css}}.css">  
  {{/if}}
  <script src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
</head>

<body>
  <div id="loader">
    <div>
      <img src="/img/loader.jpg" alt="Cappsule app">
    </div>
  </div>
  
  <div uk-sticky="sel-target: .uk-navbar-container; cls-active: uk-navbar-sticky; cls-inactive: uk-navbar-transparent; top: 50;">
    <nav class="uk-navbar-container" uk-navbar>
      <div class="uk-navbar-left uk-margin-small-left">
        <ul class="uk-navbar-nav">
          <li>
            <a class="uk-navbar-toggle" href="#main-menu" uk-toggle>
              <span uk-navbar-toggle-icon></span> <span class="uk-visible@s uk-margin-small-left">Menu</span>
            </a>
            <div id="main-menu" uk-offcanvas="overlay: true; mode: slide;">
              <div class="uk-offcanvas-bar uk-flex uk-flex-column">
                <ul class="uk-nav uk-nav-primary">
                  <button class="uk-offcanvas-close" type="button" uk-close></button>
                  {{#if user}}
                    <li class="li-home">
                      <a href="/user/{{user._id}}"><span class="uk-margin-small-right" uk-icon="icon: home"></span> Home</a>
                    </li>
                    <li class="uk-nav-divider"></li>
                    <li class="li-search">
                      <a href="/search"><span class="uk-margin-small-right" uk-icon="icon: search"></span> Search</a>
                    </li>
                    <li class="li-offers">
                      <a href="/offers"><span class="uk-margin-small-right" uk-icon="icon: tag"></span> Special deals</a>
                    </li>
                    <li class="uk-nav-divider"></li>
                    <li class="li-cabinet">
                      <a href="/user/{{user._id}}/kit"><span class="uk-margin-small-right" uk-icon="icon: lifesaver"></span> Cabinet</a>
                    </li>
                    <li class="li-treatments">
                      <a href="/user/{{user._id}}/treatments"><span class="uk-margin-small-right" uk-icon="icon: file-edit"></span> Treatments</a>
                    </li>
                    <li class="li-reminders">
                      <a href="/user/{{user._id}}/reminders"><span class="uk-margin-small-right" uk-icon="icon: clock"></span> Reminders</a>
                    </li>
                    <li class="li-groups">
                      <a href="/user/{{user._id}}/groups"><span class="uk-margin-small-right" uk-icon="icon: users"></span> Groups</a>
                    </li>
                    <li class="li-history">
                      <a href="/user/{{user._id}}/history"><span class="uk-margin-small-right" uk-icon="icon: history"></span> History</a>
                    </li>
                    <li class="uk-nav-divider"></li>
                    <li class="li-edit">
                      <a href="/user/{{user._id}}/edit"><span class="uk-margin-small-right" uk-icon="icon: user"></span> Profile</a>
                    </li>
                    <li class="li-settings">
                      <a href="/user/{{user._id}}/settings"><span class="uk-margin-small-right" uk-icon="icon: settings"></span> Settings</a>
                    </li>
                    <li class="li-logout">
                      <a href="/auth/logout"><span class="uk-margin-small-right" uk-icon="icon: sign-out"></span> Log out</a></li>
                    {{else}}
                      <li class="li-login uk-active">
                        <a href="/auth/login"><span class="uk-margin-small-right" uk-icon="icon: sign-in"></span> Login</a>
                      </li>
                  {{/if}}
                </ul>
                <ul class="uk-nav uk-nav-default uk-margin-auto-top">
                  <li><a href="/terms">Legals</a></li>
                </ul>
              </div>
            </div>
          </li>
        </ul>
      </div>
      {{#unless data.register}}
        {{#unless data.login}}
          <div class="uk-navbar-center">
            <a href="/" class="uk-navbar-item uk-logo">
              <img data-src="/img/logo-small.png" alt="Cappsule logo" height="30" width="30" class="navbar-logo" uk-img>
            </a>
          </div>
        {{/unless}}
      {{/unless}}
      {{#if user}}
        <div class="uk-navbar-right uk-margin-small-right">
          <a href="/user/{{user._id}}/edit" class="uk-navbar-item uk-logo">
            {{#if user.profile_pic}}
              <div class="profile-pic" style="background-image: url('{{user.profile_pic}}')"></div>
              {{else}}
                <img data-src="/img/avatar.png" alt="Upload a new profile pic" data-height="50" data-width="50" class="profile-pic uk-margin" uk-img>
            {{/if}}
          </a>
        </div>
      {{/if}}
    </nav>
  </div>

  <main class="uk-container uk-container-expand uk-margin-medium-top">
    {{{body}}}
  </main>

  {{#if user}}
    <footer>
      <div class="footer-info">
        <p>Created by <a href="https://github.com/vermontgarcia">Vermont García</a> &amp; <a href="https://github.com/mauriciogzrs">Mauricio González</a></p>
      </div>
    </footer>
  {{/if}}
  
  {{#if user}}
    <a href="#" uk-totop uk-scroll="duration: 750" class="back-to-top uk-position-fixed uk-position-bottom-right uk-position-small"></a>  
  {{/if}}
</body>

<script src="https://cdnjs.cloudflare.com/ajax/libs/uikit/3.0.0-rc.20/js/uikit.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/uikit/3.0.0-rc.20/js/uikit-icons.min.js"></script>
<script src="/js/main.js"></script>
{{#if data.js}}
  <script src="/js/{{data.js}}.js"></script>  
{{/if}}
